    <title>login | realtalk.</title>

    <!-- Bootstrap core CSS -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href='//fonts.googleapis.com/css?family=Cutive' rel='stylesheet' type='text/css'>
    <link href="css/base.css" rel="stylesheet">
    <link href="css/sign.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- Nav -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="tw"><a class="navbar-brand" href="/">realtalk.</a></span>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="chat">Talk</a></li>
            <li class="active"><a href="/login">Login</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  
    <div class="container body form-container">
      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
      	<div class="alert alert-danger"><%= message %></div>
      <% } %>
      
      <!-- LOGIN FORM -->
      <form class="form-sign" action="/login" method="post" role="form">
        <h3>Login to start talking!</h3>
        <div class="form-group">
    			<label>Email</label>
    			<input type="text" class="form-control" name="email">
    		</div>
    		<div class="form-group">
    			<label>Password</label>
    			<input type="password" class="form-control" name="password">
    		</div>
        <button type="submit" class="btn btn-primary btn-lg">Signup</button>
      </form>
    </div>
    
    <!-- Footer -->
    <div id="footer">
      <hr>
      <div class="container">
        <div class="col-sm-4">
          <a href="https://www.nodejitsu.com/">powered by Nodejitsu</a>
        </div>
        <div class="col-sm-4">
          <a id="contact">Email the dev!</a>
        </div>
        <div class="col-sm-4">Code licensed under MIT
          <br>&#169; Will Lee-Wagner</div>
      </div>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.0.4.js"></script>
    <script language="javascript" type="text/javascript" src="js/plugins/jquery.willpop.min.js"></script>
  </body>
</html>