<!DOCTYPE html>
<html lang="en">
  <head>
    <% include includes/header %>
    <!-- CSS for this page -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="css/settings.css" rel="stylesheet">
    <link href="css/base.css" rel="stylesheet">
  </head>
  <body>
    <!-- Nav -->
    <% include includes/nav %>
    
    <div class="container body">
      <!-- USER FORM -->
      <form class="form-user" action="/settings" method="post" role="form">
        <!-- username -->
        <div class="form-group">
          <div class="row">
            <!-- GRAVATAR -->
            <div class="col-sm-2">
              <img id="user-img" title="imgae provided by gravatar.com" src='<%= gravatar %>' class="center"/>
            </div>
            <!-- USERNAME -->
            <div class="col-sm-10 ">
              <label>Username</label>
              <input type="text" class="form-control" name="username" value="<%= user.username || '' %>">
            </div>
          </div>
        </div>
        <!-- email -->
        <div class="form-group">
          <label>Email</label>
          <input type="email" name="email" class="form-control" value="<%= user.email || '' %>">
        </div>
        <!-- real name -->
        <div class="form-group">
          <label>Name</label>
          <div class="row">
            <div class="col-sm-4">
              <input type="text" class="form-control" name="givenName" placeholder="First" value="<%= user.givenName || '' %>">
            </div>
            <div class="col-sm-2">
              <input type="text" class="form-control" name="middleName" placeholder="Middle" value="<%= user.middleName || '' %>">
            </div>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="familyName" placeholder="Last" value="<%= user.familyName || '' %>">
            </div>
            <div class="col-sm-2">
              <input type="text" class="form-control" name="suffixName" placeholder="Suffix" value="<%= user.suffixName || '' %>">
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block ">Update</button>
      </form>
        
      <hr/>
      <div class="row">
      	<!-- LOCAL INFORMATION -->
        <div class="col-sm-3">
          <% if (user.local.password) { %>
            <a href="/unlink/local" class="btn btn-default btn-block">
              <span class="fa fa-user"></span><span class="tw"> Unlink Local</span>
            </a>
          <% } else { %> 
            <a href="/connect/local" class="btn btn-default btn-block">
              <span class="fa fa-user"></span><span class="tw"> Connect Local</span>
            </a>
          <% } %>
        </div>
        <!-- END LOCAL -->
        
        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-3">
          <% if (user.facebook.token) { %>
            <a href="/unlink/facebook" class="btn btn-primary btn-block">
              <span class="fa fa-facebook"></span><span class="tw"> Unlink Facebook</span>
            </a>
          <% } else { %> 
            <a href="/connect/facebook" class="btn btn-primary btn-block">
              <span class="fa fa-facebook"></span><span class="tw"> Connect Facebook</span>
            </a>
          <% } %>
        </div>
        <!-- END FACEBOOK -->
        
        <!-- TWITTER INFORMATION -->
        <div class="col-sm-3">
          <% if (user.twitter.token) { %>
            <a href="/unlink/twitter" class="btn btn-info btn-block">
              <span class="fa fa-twitter"></span><span class="tw"> Unlink Twitter</span>
            </a>
          <% } else { %> 
            <a href="/connect/twitter" class="btn btn-info btn-block">
              <span class="fa fa-twitter"></span><span class="tw"> Connect Twitter</span>
            </a>
          <% } %>
        </div>
        <!-- END TWITTER -->
        
        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-3">
          <% if (user.google.token) { %>
            <a href="/unlink/google" class="btn btn-danger btn-block">
              <span class="fa fa-google-plus"></span><span class="tw"> Unlink Google</span>
            </a>
          <% } else { %> 
            <a href="/connect/google" class="btn btn-danger btn-block">
              <span class="fa fa-google-plus"></span><span class="tw"> Connect Google</span>
            </a>
          <% } %>
        </div>
        <!-- END GOOGLE -->
      </div>
    </div>
    
    <!-- Footer -->
    <% include includes/footer %>
  </body>
</html>