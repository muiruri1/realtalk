<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Will Lee-Wagner">

    <title>Signup | Webtalk</title>

    <!-- Bootstrap core CSS -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/sign.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- Nav -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Webtalk</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="chat">Chat</a></li>
            <li><a href="about">About</a></li>
            <li><a href="settings">Settings</a></li>
            <li class="active"><a href="/">Login</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  
    <div class="container body form-container">
      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
      	<div class="alert alert-danger"><%= message %></div>
      <% } %>
      
      <!-- LOGIN FORM -->
      <form class="form-sign" action="/signup" method="post" role="form">
        <h3>Login to start chatting!</h3>
        <div class="form-group">
    			<label>Email</label>
    			<input type="text" class="form-control" name="email">
    		</div>
    		<div class="form-group">
    			<label>Password</label>
    			<input type="password" class="form-control" name="password">
    		</div>
        <button type="submit" class="btn btn-primary btn-lg">Signup</button>
      </form>
      
      <hr>

    	<p>Already have an account? <a href="/login">Login</a></p>
    	<p>Or go <a href="/">home</a>.</p>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  </body>
</html>